
@{
    ViewBag.Title = "Targets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Targets
    </h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><i class="fa fa-th-list"></i> Targets</li>
    </ol>
</section>

<section class="content box" ng-controller="TargetsController">
    <div class="overlay" ng-show="loading">
        <i class="fa fa-refresh fa-spin"></i>
    </div>

    <div class="row">

        <div class="col-12">
            <div class="text-right box-header">
                <button class="btn btn-primary" ng-click="addNewTarget()">
                    <i class="fa fa-plus"></i>
                    <span>
                        Create target
                    </span>
                </button>
            </div>
            <div class="box" ng-form="targetsForm">
                <div class="box-body no-padding">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th style="width:20px">№</th>
                                <th style="width:200px;text-align:center">#</th>
                                <th style="width:300px;text-align:center">Name</th>
                                <th style="width:50px">Total</th>
                                <th style="width:30px"></th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="item in targets">
                                <td>
                                    {{$index+1}}.
                                </td>
                                <td>
                                    <input type="text" required class="form-control" maxlength="16" placeholder="Code" ng-model="item.Code">
                                </td>
                                <td><input type="text" required class="form-control" maxlength="255" placeholder="Name" ng-model="item.Name"></td>
                                <td><input type="number" class="form-control" min="1" placeholder="Total" ng-model="item.TargetRequiredTotal"></td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-danger" title="Remove target" ng-click="vm.removeTarget(item)">
                                        <i class="fa fa-remove">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-default" ng-click="vm.loadTargets()">Cancel</button>
                    <button type="submit" class="btn btn-info pull-right" ng-disabled="targetsForm.$invalid || (targets.length==0 && !allowSaveEmptyTargets)" ng-click="vm.saveTargets()">
                        Save
                    </button>
                </div>
            </div>
        </div>

    </div>
</section>
