<Application x:Class="DeStream.Wallet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DeStream.Wallet"
             StartupUri="LoginWindow.xaml"
             >
    <Application.Resources>
        <local:VMLocator x:Key="VMLocator"></local:VMLocator>
        <local:AppContext x:Key="AppContext"></local:AppContext>

        <Style x:Key="RoundedBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>
    </Application.Resources>
</Application>
